<Window x:Class="WPF_Simple_Browser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Simple_Browser"
        mc:Ignorable="d"
        Title="WPF Browser | User Select" Height="500" Width="850" ResizeMode="CanMinimize" Cursor="Hand">
    <Grid>
        <StackPanel>
            <Button Background="White" BorderBrush="White" Margin="6,0,0,0" Height="285" Click="Button_Click" RenderTransformOrigin="0.505,1.183" IsHitTestVisible="True" IsTabStop="False">
                <Image Source="/Assets/User.png" HorizontalAlignment="Left" Height="150" Margin="1,142,0,0" VerticalAlignment="Top" Width="135"/>
            </Button>
        </StackPanel>
        <Label Content="User" HorizontalAlignment="Left" Margin="400,300,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
    </Grid>
</Window>
